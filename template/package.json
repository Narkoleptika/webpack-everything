{
  "name": "{{ name }}",
  "description": "A vue project template with webpack code splitting, ssr and pwa capabilities",
  "author": "{{ author }}",
  "version": "0.0.1",
  "scripts": {
    "dev": "node server",
    "prod": "npm run build && cross-env NODE_ENV=production node server",
    "prod--no-ssl": "npm run build && cross-env NODE_ENV=production NO_SSL=true node server",
    "build": "rimraf dist && npm run build:client && npm run build:server",
    "build:client": "cross-env NODE_ENV=production webpack --config build/webpack.client.config.js --progress --hide-modules",
    "build:server": "cross-env NODE_ENV=production webpack --config build/webpack.server.config.js --progress --hide-modules"
  },
  "engines": {
    "node": ">=6.0",
    "npm": ">=3.0"
  },
  "dependencies": {
    "compression": "^1.6.2",
    "es6-promise": "^4.1.0",
    "express": "^4.15.2",
    "lru-cache": "^4.0.2",
    "spdy": "^3.4.4"
  },
  "devDependencies": {
    "buble": "^0.15.2",
    "buble-loader": "^0.4.1",
    "cross-env": "^3.2.4",
    "css-loader": "^0.27.3",
    "file-loader": "^0.10.1",
    "html-webpack-plugin": "^2.28.0",
    "image-webpack-loader": "^3.2.0",
    "nib": "^1.1.2",
    "rimraf": "^2.6.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1",
    "sw-precache-webpack-plugin": "^0.9.1",
    "url-loader": "^0.5.8",
    "vue": "^2.2.4",
    "vue-loader": "^11.1.4",
    "vue-router": "^2.3.0",
    "vue-server-renderer": "^2.2.4",
    "vue-ssr-webpack-plugin": "^1.0.2",
    "vue-template-compiler": "^2.2.4",
    "vuex": "^2.2.1",
    "vuex-router-sync": "^4.1.2",
    "webpack": "^2.2.1",
    "webpack-dev-middleware": "^1.10.1",
    "webpack-hot-middleware": "^2.17.1"
  }
}
